.jumbotron
  %h1 Welcome to The Iron Shop!
  %h3.txtdec
    -if current_user
      = "We Currently Have #{@items.count} Items to Shop for."
      = link_to "Please Enjoy!", items_path
    -else
      %h3 Please Sign in before shopping our amazing items.
      = link_to "Log In", new_user_session_path, class:"btn btn-success btn-lg"
      = link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary btn-lg'

